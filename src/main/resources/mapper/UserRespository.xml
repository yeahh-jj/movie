<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.yeahhjj.movie.repository.UserRepository">
    <insert id="save" parameterType="com.yeahhjj.movie.domain.User" useGeneratedKeys="true" keyProperty="id">
        insert into "users" (
            "email", "password", "nick_name"
        )
        values (
            #{email}, #{password}, #{nickName}
        )
    </insert>

    <select id="findByEmail" resultType="com.yeahhjj.movie.domain.User">
        select * from "users"
        where "email" = #{email}
    </select>
</mapper>