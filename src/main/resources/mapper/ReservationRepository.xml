<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.yeahhjj.movie.repository.ReservationRepository">
    <insert id="save" parameterType="com.yeahhjj.movie.domain.Reservation" useGeneratedKeys="true" keyProperty="id">
        insert into `reservation` (
            `user_id`, `screening_id`, `num_seats`, `reserved_at`
        )
        values (
            #{userId}, #{screeningId}, #{numSeats}, #{reservedAt}
        )
    </insert>

    <select id="findById" resultType="com.yeahhjj.movie.domain.Reservation">
        select * from `reservation`
        where `id` = #{id}
    </select>

    <select id="findByUserId" resultType="com.yeahhjj.movie.domain.Reservation">
        select * from `reservation`
        where `user_id` = #{userId}
        order by reserved_at DESC
    </select>

    <delete id="delete" parameterType="long">
        delete from `reservation`
        where `id` = #{id}
    </delete>
</mapper>